.MyMap{
	width: 100%;
	height: 40vh;
}

.textInput{
	display: flex;
	flex-direction: row;
}

.textInput input{
	width: 375rpx;
	border: 1px solid grey;
}

.myForm{
	width: 750rpx;
	display: flex;
	flex-direction: row;
}
form input{
	width: 750rpx;
	height: 70rpx;
	font-size: 20px;
	text-align: center;
}

.myForm button{
	width: 375rpx;
}
.line{
	display: flex;
	flex-direction: row;
	justify-content: space-around;
}

.line view{
	width: 50%;
	border: 2px solid grey;
	text-align: center;
	font-size: 40rpx;
}

.choose{
	display: flex;
	flex-direction: row;
}

.choose button{
	width: 375rpx;
}


